    "sourceMap": true,
    "removeComments": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true
